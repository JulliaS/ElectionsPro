@model Vybory.Models.User
@{
    ViewData["Title"] = "DetailUser";
}


<head>
    <title>Громанянин</title>
</head>

<body>
    <div class="header">
        <a class="left_position" href="@Url.Action("Index", "PolStCherman")">Початкова</a>
    </div>
    <div class="main2">
        <form asp-action="EditCitizen" class="formclass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я - @Model.Name</label>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Прізвище - @Model.Surname</label>
            </div>
            <div class="form-group">
                <label asp-for="IPN" class="control-label">Ідентифікаційний номер - @Model.IPN</label>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">День Народження - @Model.Birthday.ToShortDateString()</label>
            </div>
            <br />
            <div class="form-group">
                <a href="@Url.Action("PolStChermanCitizen", "PolStCherman")">Назад</a>
            </div>
        </form>
    </div>

</body>

