@model IEnumerable<Vybory.Models.Citizen>
@{
    ViewData["Title"] = "AdminUser";
}

<head>
    <title>Громадянин</title>
</head>

<body>
    <div class="header">
        <a class="left_position" href="@Url.Action("StartAdminPage")">Початкова</a>
    </div>
    <div class="main2">
        <table class="table table-bordered table-responsive table-hover formclass">
            <tr>
                <th>ID</th>
                <th>Округ ID</th>
                <th>Дільниця ID</th>
                <th>Вибори ID</th>
                <th>Статус ID</th>
            </tr>
            @foreach (var citizen in Model)
            {
            <tr>
                <td><a asp-action="EditUser" asp-route-id="@citizen.Id">@citizen.Id</a></td>
                <td> <a asp-action="EditDistrict" asp-route-id="@citizen.DistrictId">@citizen.DistrictId</a></td>
                <td> <a asp-action="EditPollingStation" asp-route-id="@citizen.PollingStationId">@citizen.PollingStationId</a></td>
                <td> <a asp-action="EditElection" asp-route-id="@citizen.ElectionId">@citizen.ElectionId</a></td>
                <td> @citizen.StatusId</td>
                <td>
                    <a asp-action="EditCitizen" asp-route-id="@citizen.Id">Редагувати</a>
                </td>
            </tr>
            }
        </table>
    </div>
</body>


