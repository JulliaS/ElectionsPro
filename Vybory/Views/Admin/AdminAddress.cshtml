@model IEnumerable<Vybory.Models.Address>
@{
    ViewData["Title"] = "AdminAddress";
}

<head>
    <title>Адреса</title>
</head>

<body>
    <div class="header">
        <a class="left_position" href="@Url.Action("StartAdminPage")">Початкова</a>
    </div>
    <div class="main2">
        <p>
            <a asp-action="CreateAddress">Створити Нову Адресу</a>
        </p>
        <table class="table table-bordered table-responsive table-hover formclass">
            <tr>
                <th>ID</th>
                <th>Регіон</th>
                <th>Місто</th>
                <th>Вулиця</th>
                <th>Номер будинку</th>
            </tr>
            @foreach (var address in Model)
            {
                <tr>
                    <td>@address.Id</td>
                    <td>@address.Region</td>
                    <td>@address.Town</td>
                    <td>@address.Street</td>
                    <td>@address.HouseNumber</td>
                    <td>
                        <a asp-action="EditAddress" asp-route-id="@address.Id">Редагувати</a> |
                        <a asp-action="DeleteAddress" asp-route-id="@address.Id">Видалити</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>

