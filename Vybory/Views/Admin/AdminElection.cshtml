@model IEnumerable<Vybory.Models.Election>
@{
    ViewData["Title"] = "AdminElection";
}

<head>
    <title>Вибори</title>
</head>

<body>
    <div class="header">
        <a class="left_position" href="@Url.Action("StartAdminPage")">Початкова</a>
    </div>
    <div class="main2">
        <p>
            <a asp-action="CreateElection">Створити Нові Вибори</a>
        </p>
        <table class="table table-bordered table-responsive table-hover formclass">
            <tr>
                <th>ID</th>
                <th>Ім'я</th>
                <th>Рік</th>
                <th>Тур</th>
                <th>Розпочаток виборів</th>
                <th>Кінець виборів</th>
            </tr>
            @foreach (var election in Model)
            {
                <tr>
                    <td>@election.Id</td>
                    <td>@election.Name</td>
                    <td>@election.Year</td>
                    <td>@election.TourId</td>
                    <td>@election.StartVote</td>
                    <td>@election.EndVote</td>
                    <td>
                        <a asp-action="EditElection" asp-route-id="@election.Id">Редагувати</a> |
                        <a asp-action="DeleteElection" asp-route-id="@election.Id">Видалити</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>

