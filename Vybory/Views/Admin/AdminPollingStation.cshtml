@model IEnumerable<Vybory.Models.PollingStation>
@{
    ViewData["Title"] = "AdminPollingStation";
}

<head>
    <title>Дільниці</title>
</head>
<body>

    <div class="header">
        <a class="left_position" href="@Url.Action("StartAdminPage")">Початкова</a>
    </div>
    <div class="main2">
        <p>
            <a asp-action="CreatePollingStation">Створити Нову Дільницю</a>
        </p>
        <table class="table table-bordered table-responsive table-hover formclass">
            <tr>
                <th>ID</th>
                <th>Номер</th>
                <th>Ім'я</th>
                <th>Адреса ID</th>
                <th>Округ ID</th>
            </tr>
            @foreach (var station in Model)
            {
                <tr>
                    <td>@station.Id</td>
                    <td>@station.Number</td>
                    <td>@station.Name</td>
                    <td> <a asp-action="EditAddress" asp-route-id="@station.AddressId">@station.AddressId</a></td>
                    <td> <a asp-action="EditDistrict" asp-route-id="@station.DistrictId">@station.DistrictId</a></td>
                    <td>
                        <a asp-action="EditPollingStation" asp-route-id="@station.Id">Редагувати</a> |
                        <a asp-action="DeletePollingStation" asp-route-id="@station.Id">Видалити</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</body>

